#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)
export buildroot := $(SB_TOP)/build/debian/contrail-control
export LD_LIBRARY_PATH := $(LD_LIBRARY_PATH):$(SB_TOP)/build/debian/contrail-libs/usr/lib64/contrail

export _contrailetc := /etc/contrail
export _supervisordir := /etc/contrail/supervisord_control_files
export _bindir := /usr/bin
export _initddir := /etc/init.d
export _initdir := /etc/init
export _src_config := $(SB_TOP)/tools/packaging/common/control_files

export _venv_root := /opt/contrail/control-venv
export _venvtr := --prefix=$(_venv_root)
export _pyver := 2.7
export _pysitepkg := /lib/python$(_pyver)/site-packages
export _build_dist := $(_builddir)/build/debug

BUILDTAG =
ifdef TAG
BUILDTAG = $(TAG)
else
BUILDTAG = $(BUILDTIME)
endif

TARGETS=control-node
%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build:
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog
	(cd ${SB_TOP} && scons ${TARGETS})

override_dh_auto_install: 
#	Setup directories
#	install -d -m 755 $(buildroot)$(_contrailetc)
#	install -d -m 755 $(buildroot)$(_contrailcontrol)
#	install -d -m 755 $(buildroot)$(_supervisordir)
#	install -d -m 755 $(buildroot)$(_venv_root)
#	install -D -m 755 tools/packaging/supervisor-control.upstart $(buildroot)$(_initdir)/supervisor-control.conf
#	install -D -m 755 tools/packaging/contrail-control.initd.supervisord $(buildroot)$(_initdir)/contrail-control
#	install -d -m 755 $(buildroot)/usr/share/doc/python-Control-Node
	#install files
	install -d -m 755 $(buildroot)$(_bindir)
	install -p -m 755 ${SB_TOP}/build/debug/control-node/control-node $(buildroot)$(_bindir)/control-node
#	install .ini files for supervisord
#	install -p -m 755 tools/packaging/supervisord_control.conf $(buildroot)$(_contrailetc)/supervisord_control.conf
#	install -p -m 755 tools/packaging/contrail-control.ini $(buildroot)$(_supervisordir)/contrail-control.ini
	install -D -m 644 $(_src_config)/control_param $(buildroot)/etc/contrail/control_param
#	install -p -m 755 tools/packaging/contrail-control.rules $(buildroot)$(_supervisordir)/contrail-control.rules
#	install pysandesh files
#	install -d -m 755 $(buildroot)$(_venv_root)
#	mkdir -p build/python_dist
#	cd build/python_dist; tar zxf $(_build_dist)/control-node/dist/Control-Node-0.1dev.tar.gz; cd Control-Node-0.1dev; $(__python) setup.py install --root=$(buildroot)  $(_venvtr);
#	cd build/python_dist; tar zxf $(_build_dist)/sandesh/library/python/dist/sandesh-0.1dev.tar.gz; cd sandesh-0.1dev; $(__python) setup.py install --root=$(buildroot)  $(_venvtr)
#	cd build/python_dist; tar zxf $(_build_dist)/discovery/dist/discovery-0.1dev.tar.gz; cd discovery-0.1dev; $(__python) setup.py install --root=$(buildroot)  $(_venvtr)


